<!DOCTYPE html>
<html lang="en">

<%- include("../partial/head.ejs") %>

    <body class="board-content">
        <%- include("../layout/sidenav.ejs") %>


            <div class="my-container main">
                <div class="px-4 content-home board-menu">
                    <div class="d-flex d-inline-block mb-3">
                        <h4 class="fw-bold rounded d-flex justify-content-center align-items-center py-1  ">To Do</h4>

                        <a href="#" class="fw-bold d-flex justify-content-center align-items-center btn-add text-decoration-none rounded text-white py-1 mx-3" data-bs-toggle="modal" data-bs-target="#staticBackdrop"><i class="fas fa-plus-circle mx-2"></i>Create Task</a>
                    </div>
                    <div class="d-flex d-inline-block">
                        <div class="card todo-card shadow">
                            <div class="row">
                                <div class="col-9 px-4">
                                    <div class="card-title fs-5 fw-bold text-center pt-2">Title</div>
                                    <p class=" text-date mb-0 text-secondary"><i class="fas fa-calendar mx-2 "></i>25 Des 2021</p>
                                </div>
                                <div class="col-2 px-4 pt-3 d-flex justify-content-end">
                                    <a class="nav-link text-decoration-none text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item mb-1" href="#"><i class="fas fa-pencil-alt mx-2"></i>Update</a></li>
                                        <li><a class="dropdown-item mb-1" href="#"><i class="fas fa-trash mx-2"></i>Delete</a></li>
                                    </ul>
                                    <!-- <a href="#" class="text-decoration-none text-dark"><i class="fas fa-pencil-alt"></i></a> -->
                                </div>
                            </div>
                            <div class="card-body board-card">
                                <div class="card mb-2 shadow pt-2 mx-1">
                                    <div class="row">
                                        <div class="col-12 mb-2">
                                            <ul class="list-group">
                                                <li class="list-group-item border-0 d-flex align-items-center ps-0">
                                                    <input class="form-check-input mx-2 me-2" type="checkbox" value="" /> Set due date and assignments
                                                </li>
                                                <li class="list-group-item border-0 d-flex align-items-center ps-0">
                                                    <input class="form-check-input mx-2 me-2" type="checkbox" value="" /> Remove duplicate tasks and stories
                                                </li>
                                            </ul>
                                        </div>

                                        <div class="col-12 d-flex justify-content-center align-items-center">

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <!-- Modal -->
                    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-scrollable">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title fw-bold" id="staticBackdropLabel">Task</h5>

                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body d-flex justify-content-center px-0">
                                    <form action="" method="post">
                                        <div class="row mb-2">
                                            <div class="col-12 d-flex  align-items-center">
                                                <label for="title" class="fw-bold">Title</label>
                                            </div>
                                            <div class="col-12 ">
                                                <input type="text" class="form-control my-1" id="name" placeholder="Title" name="title">
                                            </div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-12 col-md-6 d-flex  align-items-center">
                                                <label for="description" class="fw-bold">Description</label>
                                            </div>
                                            <div class="col-12 ">
                                                <textarea type="text" class="form-control my-1" rows=3 id="alamat" placeholder="Description" name="description"></textarea>
                                            </div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-12 col-md-6 d-flex  align-items-center">
                                                <label for="start_date" class="fw-bold">Start At</label>
                                            </div>
                                            <div class="col-12 ">
                                                <input type="datetime-local" class="form-control my-1" id="start_date" name="start_date">
                                            </div>
                                        </div>

                                        <div class="row mb-2">
                                            <div class="col-12 col-md-6 d-flex  align-items-center">
                                                <label for="due_date" class="fw-bold">Due Date</label>
                                            </div>
                                            <div class="col-12 ">
                                                <input type="datetime-local" class="form-control my-1" id="due_date" name="due_date">
                                            </div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-12 col-md-6 d-flex  align-items-center">
                                                <label for="item" class="fw-bold">List</label>
                                                <button type="submit" class="btn btn-light ms-3 py-0"><i class="fas fa-plus-circle py-0 mx-2"></i></button>
                                            </div>
                                            <div class="col-12  ">
                                                <div class="form-outline d-flex d-inline-block">
                                                    <input type="text" class="form-control my-1" id="item" placeholder="New item" name="item">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-primary">Create</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <%- include("../partial/script.ejs") %>

    </body>

</html>